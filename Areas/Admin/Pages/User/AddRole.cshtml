@page "/admin/assign-user-role/{id}"
@model  App.Admin.User.AddRoleModel
@{
    ViewData["Title"] = "gán role";
   
}

<h3>thiết lập role  user cho  @ViewData["GetUserNameById"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">           
                <label asp-for="@Model.RoleNames" class="form-label"></label>
                @Html.ListBoxFor(m => m.RoleNames,@Model.allRoles,new {
                    id = "id-select-role",
                    @class  = "w-100"    
                })
                <span asp-validation-for="@Model.RoleNames" class="text-danger"></span>
            </div>
           
            <button  type="submit" class="w-100 btn btn-lg btn-primary mt-3">cập nhập</button>
            <a class = " btn btn-success mt-3" asp-page = "./Index">danh sách thành viên</a>
        </form>
    </div>
</div>

@section Scripts {
    <script src = "~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css">
    <script>
        $("#id-select-role").multipleSelect({
            selectAll : false,
            keepOpen : false,
            isOpen : false,
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}
